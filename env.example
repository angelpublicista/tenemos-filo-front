# Sanity Configuration
# Copia este archivo como .env.local y llena los valores reales

# Project ID de tu proyecto de Sanity
NEXT_PUBLIC_SANITY_PROJECT_ID=tu_project_id_aqui

# Dataset (normalmente 'production' o 'development')
NEXT_PUBLIC_SANITY_DATASET=production

# Token de API con permisos de escritura
# IMPORTANTE: Este token debe tener permisos de CREATE, UPDATE, DELETE
# Puedes generarlo en: https://www.sanity.io/manage
NEXT_PUBLIC_SANITY_TOKEN=sk...tu_token_aqui

# Firebase Configuration (si no está configurado en otro lugar)
NEXT_PUBLIC_FIREBASE_API_KEY=tu_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=tu_proyecto.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=tu_proyecto_id

# Brevo (Sendinblue) Email Configuration
# Obtén estas credenciales en: https://app.brevo.com/settings/keys/smtp
BREVO_SMTP_USER=tu_usuario_smtp_de_brevo
BREVO_SMTP_PASSWORD=tu_password_smtp_de_brevo
BREVO_FROM_EMAIL=noreply@tenemosfilo.com

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
